# ┏━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┓
# ┃                          Keybinds                           ┃
# ┗━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━┛
$mainMod = SUPER

$terminal = kitty
$fileManager = nautilus
$menu = rofi -show drun


# Essential binds
bind = $mainMod, RETURN, exec, $terminal
bind = $mainMod, Q, killactive,
bind = $mainMod, M, exit,
bind = $mainMod, T, exec, $fileManager
bind = $mainMod, V, togglefloating,
bind = $mainMod, D, exec, $menu
bind = $mainMod, P, pseudo,
bind = $mainMod, J, togglesplit,
bind = $mainMod, B, exec, zen-browser

bind = $mainMod, F, fullscreen, 0

# Move focus
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

# Workspaces
bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod, 6, workspace, 6
bind = $mainMod, 7, workspace, 7
bind = $mainMod, 8, workspace, 8
bind = $mainMod, 9, workspace, 9
bind = $mainMod, 0, workspace, 10

# Move windows to workspaces
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10

# Screenshot
bind = $mainMod SHIFT, S, exec, sh -c 'REGION=$(slurp) || exit; grim -g "$REGION" - | wl-copy && wl-paste > ~/Pictures/screenshots/Screenshot-$(date +%F_%T).png && dunstify "Region screenshot saved & copied" -t 2000'
bind = $mainMod, S, exec, grim - | wl-copy && wl-paste > ~/Pictures/screenshots/Screenshot-$(date +%F_%T).png && dunstify "Fullscreen screenshot saved & copied" -t 2000

# Mouse workspace switching
bind = $mainMod, mouse_down, workspace, e+1
bind = $mainMod, mouse_up, workspace, e-1

# Mouse window actions
bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

# Media keys
bindel = ,XF86AudioRaiseVolume, exec, $HOME/dotfiles/.config/hypr/scripts/volumecontrol.sh -o i
bindel = ,XF86AudioLowerVolume, exec,$HOME/dotfiles/.config/hypr/scripts/volumecontrol.sh -o d 
bindel = ,XF86AudioMute, exec,$HOME/dotfiles/.config/hypr/scripts/volumecontrol.sh -o m
bindel = ,XF86AudioMicMute, exec,$HOME/dotfiles/.config/hypr/scripts/volumecontrol.sh -i m
bindel = ,XF86MonBrightnessUp, exec, $HOME/dotfiles/.config/hypr/scripts/brightnesscontrol.sh i
bindel = ,XF86MonBrightnessDown, exec, $HOME/dotfiles/.config/hypr/scripts/brightnesscontrol.sh d

# Media controls
bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous

bind = $mainMod SHIFT, V, exec, sh -c 'cliphist list | rofi -dmenu | cliphist decode | wl-copy'


# Lock screen & power menu
bind = $mainMod, L, exec, hyprlock
bind = $mainMod SHIFT, L, exec, $HOME/dotfiles/.config/waybar/scripts/power.sh

# Reload Hyprland & Waybar
bind = $mainMod SHIFT, W, exec, killall waybar && waybar
bind = $mainMod SHIFT, R, exec, hyprctl reload


